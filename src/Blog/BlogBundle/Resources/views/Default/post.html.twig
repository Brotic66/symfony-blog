{% extends ':default:template.html.twig' %}
{% block corps %}
<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->

            <!-- Title -->
            <h1>{{ post.titre }}</h1>

            <!-- Author -->
            <p class="lead">
                Par <a disabled>{{ post.author }}</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> {{ post.published|date('Y-m-d \\à H:i:s') }}</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-responsive" src="http://placehold.it/900x300" alt="">

            <hr>

            <!-- Post Content -->
            <p>{{ post.content }}</p>
            <hr>

            <!-- Blog Comments -->

            <!-- Comments Form -->
            {% if app.user %}
            <div class="well">
                <h4>Commenter :</h4>
                <form role="form" method="post" action="{{ path('blog_new_comment',{'post': post.id}) }}">
                    <div class="form-group">
                        <textarea class="form-control" rows="3" name="content"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </form>
            </div>

            <hr>
            {% endif %}

            <!-- Posted Comments -->
            {% for comment in comments %}
            <!-- Comment -->
            <div class="media">
                <a class="pull-left" href="#">
                    <img class="media-object" src="http://placehold.it/64x64" alt="">
                </a>
                <div class="media-body">
                    <h4 class="media-heading"> {{ comment.author }}
                        <small>{{ comment.published|date('Y-m-d \\à H:i:s') }}</small>
                    </h4>
                    {{ comment.content }}
                </div>
            </div>
            {% endfor %}

        </div>
        </div>
    </div>
{% endblock %}
